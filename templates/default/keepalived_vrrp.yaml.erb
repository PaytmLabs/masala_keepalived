init_config:
  #You can specify an additional folder for your custom mib files (python format)
  #mibs_folder: /path/to/your/mibs/folder
  ignore_nonincreasing_oid: False

instances:
  - ip_address: localhost
    port: 161
    community: public
    snmp_version: 2 # Only required for snmp v1, will default to 2
    timeout: 3 # second, by default
    retries: 5
    # vrouters to include/exclude
    include: ^.*$
    exclude: ^$
    # set to master or backup. not setting will use initial state
    #verify: master                 
    # OR set the weight threshold that will be considered master state
    #weight: 200
    enforce_mib_constraints: true  # if set to false we will not check the values
                                   # returned meet the MIB constraints. Defaults to True.
    tags:
      - optional_tag_1
      - optional_tag_2


